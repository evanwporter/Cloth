{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Install with pip",
            "type": "shell",
            "command": "pip",
            "args": [
                "install",
                "--no-build-isolation",
                "-ve",
                "."
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        },
        {
            "type": "cppbuild",
            "label": "C/C++: cl.exe build active file",
            "command": "cl.exe",
            "args": [
                "/EHsc",
                "/Fe:", "${workspaceFolder}\\build\\${fileBasenameNoExtension}.exe",
                "/I", "${workspaceFolder}\\lib\\Eigen",
                "${file}"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ]
}